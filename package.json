    "vercel": "vercel"
  },
  "capabilities": {
    "config": {
      "appId": "com.streamflix.app",
      "appName": "StreamFlix"
    }
  },
  "keywords": [
    "streaming",
    "movies",
    "tv-shows"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0"
  }
}
